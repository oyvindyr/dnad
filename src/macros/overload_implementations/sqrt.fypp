
#:def sqrt_d(dual_type, dual_sn, real_kind, size_dx, is_pure, test_coverage, stringent)
    #:if is_pure and not test_coverage
        #:set elemental_purity = "elemental"
    #:else
        #:set elemental_purity = "impure elemental"
    #:endif
    ${elemental_purity}$ function sqrt_${dual_sn}$(u) result(res)
        type(${dual_type}$), intent(in) :: u
        type(${dual_type}$) :: res
        real(${real_kind}$) :: t0
      #:if stringent
        integer :: i
      #:endif
        
        t0 = sqrt(u%f)
        res%f = t0
      #:if stringent
        if (res%f /= 0) then
            res%g = 0.5_${real_kind}$*u%g/t0
        else
            do i = 1, ${size_dx}$
                if (u%g(i) == 0) then
                    res%g(i) = 0
                else
                    res%g(i) = set_NaN()
                end if
            end do
        end if
      #:else
        res%g = 0.5_${real_kind}$*u%g/t0
      #:endif
      #:if test_coverage
        sqrt_d_counter = sqrt_d_counter + 1
      #:endif
    end function

#:enddef

#:def sqrt_hd(dual_type, dual_sn, real_kind, size_dx, is_pure, test_coverage, stringent)
    #:if is_pure and not test_coverage
        #:set elemental_purity = "elemental"
    #:else
        #:set elemental_purity = "impure elemental"
    #:endif
    ${elemental_purity}$ function sqrt_${dual_sn}$(u) result(res)
        type(${dual_type}$), intent(in) :: u
        type(${dual_type}$) :: res
        integer :: i, j, k
        real(${real_kind}$) :: t0,t1
        
        t0 = sqrt(u%f)
        t1 = 1.0_${real_kind}$/t0
        res%f = t0
      #:if stringent
        if (res%f /= 0) then
            res%g = 0.5_${real_kind}$*t1*u%g
            k = 0
            do j = 1, ${size_dx}$
                do i = j, ${size_dx}$
                    k = k + 1
                    res%h(k) = (0.25_${real_kind}$)*t1*(2*u%h(k) - u%g(i)*u%g(j)/u%f)
                end do
            end do
        else
            do i = 1, ${size_dx}$
                if (u%g(i) == 0) then
                    res%g(i) = 0
                else
                    res%g(i) = set_NaN()
                end if
            end do
            res%h = set_NaN() ! Not sure if this is correct..
        end if
      #:else
        res%g = 0.5_${real_kind}$*t1*u%g
        k = 0
        do j = 1, ${size_dx}$
            do i = j, ${size_dx}$
                k = k + 1
                res%h(k) = (0.25_${real_kind}$)*t1*(2*u%h(k) - u%g(i)*u%g(j)/u%f)
            end do
        end do
      #:endif
      #:if test_coverage
        sqrt_hd_counter = sqrt_hd_counter + 1
      #:endif
    end function
#:enddef

